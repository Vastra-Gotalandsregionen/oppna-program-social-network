<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
  <portlet>
    <portlet-name>public-profile</portlet-name>
    <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
    <friendly-url-mapping>user</friendly-url-mapping>
    <friendly-url-routes>public-profile-friendly-url-routes.xml</friendly-url-routes>
    <instanceable>false</instanceable>
    <css-class-wrapper>public-profile-portlet</css-class-wrapper>
  </portlet>

  <portlet>
    <portlet-name>friends</portlet-name>
    <instanceable>false</instanceable>
    <css-class-wrapper>friends-portlet</css-class-wrapper>
  </portlet>

  <portlet>
    <portlet-name>profile-stream</portlet-name>
    <instanceable>false</instanceable>
    <css-class-wrapper>profile-stream-portlet</css-class-wrapper>
  </portlet>

  <role-mapper>
    <role-name>administrator</role-name>
    <role-link>Administrator</role-link>
  </role-mapper>
  <role-mapper>
    <role-name>guest</role-name>
    <role-link>Guest</role-link>
  </role-mapper>
  <role-mapper>
    <role-name>power-user</role-name>
    <role-link>Power User</role-link>
  </role-mapper>
  <role-mapper>
    <role-name>user</role-name>
    <role-link>User</role-link>
  </role-mapper>

</liferay-portlet-app>

